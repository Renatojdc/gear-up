<div class="container w-75">
  <h1 class="text-center">Your Gears </h1>
  <div class="row">
    <% @gears.each do |gear| %>
    <div class="col d-flex justify-content-center">
      <div class="card shadow mt-3" style="width: 50rem;">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% gear.photos.each_with_index do |photo,index| %>
              <%if index == 0%>
                <div class="carousel-item active">
                  <%= cl_image_tag photo.key, class:'d-block w-100' %>
                </div>
              <%else%>
                <div class="carousel-item">
                  <%= cl_image_tag photo.key, class:'d-block w-100' %>
                </div>
              <%end%>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= gear.gear_type %> for <%= gear.sport_type %></h5>
          <p class="card-text"><%= gear.description %></p>
          <ul class="list-group-flush list-inline">
            <li class="list-inline-item"><i class="fa-solid fa-dollar-sign"></i> <%=gear.price %>/day</li>
            <li class="list-inline-item"><%= gear.amount %> units</li>
          </ul>
          <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_gear_path(gear) %>
          <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, gear_path(gear), class: "text-danger", data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete"}%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
